{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Register</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}


                    <button class="btn btn-lg btn-primary light-green darken-2">Register</button>
                {{ form_end(registrationForm) }}
                <p>I already have an account. <a href="/login" class="btn btn-primary" style="color: #fff;">Log in</a></p>
            </div>
        </div>
    </div>
{% endblock %}
